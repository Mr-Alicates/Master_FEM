<Window x:Class="POC3D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:POC3D.Controls"
        xmlns:viewModel="clr-namespace:POC3D.ViewModel"
        Title="MainWindow">

    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
    
        <StackPanel Orientation="Horizontal"  Grid.Row="0">

            <Button Content="Nodes" Command="{Binding InterfaceControlViewModel.ShowNodesControlCommand}" />
            <Button Content="Elements" Command="{Binding InterfaceControlViewModel.ShowElementsControlCommand}" />

        </StackPanel>


    <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
        
        <controls:VisualAreaControl Grid.Column="0" MainViewModel="{Binding Path=.}" x:Name="Viewport" Focusable="True"/>

        <controls:NodeManagerControl 
            Grid.Column="1" 
            Visibility="{Binding Path=InterfaceControlViewModel.NodesControlVisibility}"
            DataContext="{Binding Path=.}"/>

        <StackPanel
            Grid.Column="1" 
            Visibility="{Binding Path=InterfaceControlViewModel.ElementsControlVisibility}"
            Orientation="Vertical">

                <controls:ElementAddingControl DataContext="{Binding Path=.}"/>
                <controls:ElementListingControl DataContext="{Binding Path=.}"/>
        </StackPanel>        

        </Grid>
    </Grid>
</Window>
