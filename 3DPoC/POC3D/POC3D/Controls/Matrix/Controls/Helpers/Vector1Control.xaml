<UserControl x:Class="POC3D.Controls.Matrix.Controls.Helpers.Vector1Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helpers="clr-namespace:POC3D.Controls.Matrix.Controls.Helpers"
             mc:Ignorable="d">
  <Grid Margin="5 0 5 0">

    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="30" />
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="30" />
    </Grid.ColumnDefinitions>

    <helpers:OpenCurlyBracketsControl Grid.Column="0" />

    <TextBlock x:Name="Position1"
               Grid.Column="1"
               VerticalAlignment="Center"
               HorizontalAlignment="Center" />

    <helpers:CloseCurlyBracketsControl Grid.Column="2" />
  </Grid>
</UserControl>