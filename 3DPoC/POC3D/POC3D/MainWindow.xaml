<Window x:Class="POC3D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:POC3D.Controls"
        xmlns:nodes="clr-namespace:POC3D.Controls.Nodes"
        xmlns:elements="clr-namespace:POC3D.Controls.Elements"
        xmlns:forces="clr-namespace:POC3D.Controls.Forces"
        Title="MainWindow">

    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0">

            <Button Content="Nodes" Command="{Binding InterfaceControlViewModel.ShowNodesControlCommand}" />
            <Button Content="Elements" Command="{Binding InterfaceControlViewModel.ShowElementsControlCommand}" />
            <Button Content="Forces" Command="{Binding InterfaceControlViewModel.ShowForcesControlConmmand}" />

        </StackPanel>


        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>

            <controls:VisualAreaControl Grid.Column="0" MainViewModel="{Binding Path=.}" x:Name="Viewport"
                                        Focusable="True" />

            <nodes:NodeManagerControl
                Grid.Column="1"
                Visibility="{Binding Path=InterfaceControlViewModel.NodesControlVisibility}"
                DataContext="{Binding Path=.}" />

            <StackPanel
                Grid.Column="1"
                Visibility="{Binding Path=InterfaceControlViewModel.ElementsControlVisibility}"
                Orientation="Vertical">

                <elements:SelectedElementDetailsControl DataContext="{Binding Path=.}" />
                <elements:ElementListingControl DataContext="{Binding Path=.}" />
                <elements:ElementAddingControl DataContext="{Binding Path=.}" />
            </StackPanel>

            <StackPanel
                Grid.Column="1"
                Visibility="{Binding Path=InterfaceControlViewModel.ForcesControlVisibility}"
                Orientation="Vertical">

                <forces:ForceListingControl DataContext="{Binding Path=.}" />
            </StackPanel>

        </Grid>
    </Grid>
</Window>