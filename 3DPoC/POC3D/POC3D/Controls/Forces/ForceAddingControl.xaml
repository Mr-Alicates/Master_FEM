<UserControl x:Class="POC3D.Controls.Forces.ForceAddingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             MinWidth="300">
  <StackPanel>

    <TextBlock Text="Add new force" HorizontalAlignment="Center" FontWeight="Bold" />
    <Separator />

    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="30" />
      </Grid.RowDefinitions>

      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>

      <ComboBox Grid.Row="0"
                Grid.Column="0"
                ItemsSource="{Binding ProblemViewModel.NewForceViewModel.AvailableNodesForNewForces, Mode=OneWay}"
                DisplayMemberPath="Name"
                SelectedItem="{Binding ProblemViewModel.NewForceViewModel.Node}" />
      <TextBlock Grid.Row="0"
                 Grid.Column="1"
                 Text="Application node" />


      <Button Grid.Row="1"
              Grid.Column="0"
              Grid.ColumnSpan="2"
              Content="Add new force"
              Command="{Binding ProblemViewModel.NewForceViewModel.AddForceCommand}" />

    </Grid>

    <Separator />

  </StackPanel>
</UserControl>