<Window x:Class="POC3D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:POC3D.Controls"
        Title="MainWindow">

    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0">

            <Button Content="Nodes" Command="{Binding InterfaceControlViewModel.ShowNodesControlCommand}" />
            <Button Content="Elements" Command="{Binding InterfaceControlViewModel.ShowElementsControlCommand}" />
            <Button Content="Forces" Command="{Binding InterfaceControlViewModel.ShowForcesControlConmmand}" />

        </StackPanel>


        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>

            <controls:VisualAreaControl Grid.Column="0" MainViewModel="{Binding Path=.}" x:Name="Viewport"
                                        Focusable="True" />

            <controls:ManagementControl Grid.Column="1" DataContext="{Binding Path=.}" />

        </Grid>
    </Grid>
</Window>